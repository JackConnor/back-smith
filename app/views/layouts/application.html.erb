<!DOCTYPE html>
<html>
<head>
  <title>Thebacksmith2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

<div class="nav-container">
  <%=params%>
  <nav class="navbar navbar-default">
    <a href="/"><div class="name">
      <h1>The Back Smith</h1>
    </div></a>
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default" id="test">Submit</button>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/skaters"><h4>Skaters</h4></a></li>
          <li><a href="/posts"><h4>Top Posts</h4></a></li>
          <li><a href="#"><h4>Skate Crews</h4></a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><h4>Profile & Account</h4></a>
            <% if current_user%>

            <ul class="dropdown-menu">
              <li><a href="<%=skater_path(current_user)%>">My Profile</a></li>
              <li><a href="#">My favorited Posts</a></li>
              <li><a href="<%=new_post_path(current_user)%>">Upload a video</a></li>
              <li><a href="<%=edit_skater_path(current_user)%>">Edit Profile</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Separated link</a></li>
            </ul>
            <% end %>
          </li>
          <li>
            <% if current_user %>
              <%= current_user.email %>
              <%= link_to 'Logout', logout_path, method: :delete%>
            <%else%>
              <li class="login"><%=link_to "Login", new_session_path %></li>
              <li class="login"><%=link_to "Sign Up", new_skater_path %></li>
            <%end%>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</div>

<div id="root_yield">
  <%= yield %>
</div>

</body>
</html>
